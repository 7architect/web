@import 'variables/colors.styl'
.body
  margin 0
  padding 0


// Page base elements
.link
  color: $COLOR_PRIMARY
  text-decoration none
  cursor pointer
  &:hover
    text-decoration underline

.list
  &__item
    margin-bottom 1rem
    &-title
      font-size 1.2rem
      color: $color.white
      font-weight bold


.title
  font-weight 200
  font-size 2rem
  color: $color.white
  cursor default
  margin 1rem 0 1.5rem 0
  &--level
    &-2
      letter-spacing 3px
      font-size .9rem
      color: $color.grey
      text-transform uppercase
      margin-top 1em
  &--align
    &-center
      text-align center
    &-right
      text-align right
    &-left
      text-align left
  &--size
    &-small
      font-size 1.5em
    &-normal
      font-size 2em
    &-large
      font-size 2.5em
    &-xlarge
      font-size 3.5em
  &--weight
    &-normal
      font-weight 200
    &-bold
      font-weight 400
    &-xbold
      font-weight 600


.container
  max-width 700px
  margin 0 auto


.button
  background linear-gradient(45deg, /*#3b9de3 0%,*/ #7a57e6 15%, #9844b7 45%, #ff357f 100%)
  font-family inherit
  font-weight 300
  font-size .9em
  letter-spacing 1px
  color #FFFFFF
  outline none
  box-shadow 0px 3px 5px 0px rgba(0, 0, 0, .3)
  padding .4em 1.7em
  position relative
  overflow visible
  cursor pointer
  display inline-block
  text-decoration none !important
  border-radius 3px
  border 0
  transition .3s ease
  transition-property box-shadow, transform, color
  z-index 1
  &::before
    content ""
    background linear-gradient(45deg, /*#3b9de3 0%,*/ #7a57e6 15%, #9844b7 45%, #ff357f 100%)
    filter blur(10px)
    position absolute
    width calc(100% + 4px)
    height calc(100% + 2px)
    display block
    top -1px
    left -2px
    border-radius 50em
    opacity 0
    transition all .2s linear
    z-index -1
  &:hover
    transform translateY(-2px)
    box-shadow 0px 3px 3px 0px rgba(0, 0, 0, .7)
    &::before
      top 1px
      opacity .7
      cursor pointer
  &:active
    color rgba(255, 255, 255, .5)
    transition-duration .2s
    transform translate(0)
    box-shadow none
    &::before
      opacity: .5

  &__type
    &-cancel
      background linear-gradient(45deg, #4a3b54 5%, #444e69 50%, #3b4982 100%)
      &::before
        background linear-gradient(45deg, #4a3b54 5%, #444e69 50%, #3b4982 100%)
    &-secondary
      background linear-gradient(45deg, #994cd4 0%, #578def 50%, #35daff 100%)
      &::before
        background linear-gradient(45deg, #994cd4 0%, #578def 50%, #35daff 100%)
