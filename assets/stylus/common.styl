@import 'variables/colors.styl'
.body
  margin 0
  padding 0
// Page base elements
.link
  color: $COLOR_PRIMARY
  text-decoration none
  cursor pointer
  &:hover
    text-decoration underline
.paragraph
  margin-bottom 1rem
  &--align
    &-center
      text-align center
.list
  &__item
    margin-bottom 1rem
    &-title
      font-size 1.2rem
      color: $color.white
      font-weight bold
.delimiter
  background: linear-gradient(90deg, transparent 10%, $color.grey, transparent 90%)
  width 100%
  height 1px
  margin 1rem 0
  border-radius 100%
  &--margin
    &-small
      margin .5rem 0
    &-normal
      margin 1rem 0
    &-large
      margin 1.5rem 0
    &-xlarge
      margin 2rem 0
    &-xxlarge
      margin 4rem 0
.spacer
  padding 1rem 0
.title
  font-weight 200
  font-size 2rem
  color: $color.white
  cursor default
  margin 1rem 0 1.5rem 0
  &--level
    &-2
      letter-spacing 3px
      font-size .9rem
      color: $color.grey
      text-transform uppercase
      margin-top 1em

  &--align
    &-center
      text-align center
    &-right
      text-align right
    &-left
      text-align left
  &--size
    &-small
      font-size 1.5em
    &-normal
      font-size 2em
    &-large
      font-size 2.5em
    &-xlarge
      font-size 3.5em
  &--weight
    &-normal
      font-weight 200
    &-bold
      font-weight 400
    &-xbold
      font-weight 600
.btn
  cursor pointer
  padding: .7em 1.7em
  font-weight: 600
  text-transform: uppercase
  font-size: .9em
  letter-spacing: 1px
  border 0
  border-radius: 3px
  transition .1s linear
  transition-property transform , opacity
  &:active
    opacity .5
    transform scale(.95)
  &--lock
    opacity .3
  &--color
    &-black
      background linear-gradient(90deg, lighten(#000, 80), transparent)
      // border: 2px solid #000
      // box-shadow: 0px 5px 10px 0px #cecece
      color: lighten(#000, 20)
      &-reverse
        background linear-gradient(90deg, transparent, lighten(#000, 70))
